<h1>Listing Restaurants</h1>

<%= link_to 'New Restaurant', new_restaurant_path %>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant.id) do %>
      <h2>
       <%= restaurant.phone_number %>
        <%= restaurant.address %>
        <%= restaurant.name %>
      </h2>
    <% end %>
  <% end %>
</div>




