<h1>Listing Restaurants</h1>

<%= link_to 'Create a New Restaurant', new_restaurant_path %>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant.id) do %>
      <h2>
       <%= restaurant.name %> <br/>
       <%= restaurant.phone_number %> <br/>
       <%= restaurant.address %> <br/>

      </h2>
    <% end %>
  <% end %>
</div>




